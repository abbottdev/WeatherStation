<UserControl x:Class="WeatherStation.Windows.Views.ForecastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:WeatherStation.Windows.ViewModels"
             xmlns:local="clr-namespace:WeatherStation.Windows.Views"
             mc:Ignorable="d" x:Name="theView" DataContext="{Binding ElementName=theView, Path=ViewModel}"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance Type=vm:ForecastViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="The Temp in:" Margin="5" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="{Binding LocationName, FallbackValue='N/A'}" Margin="5"  VerticalAlignment="Center"></TextBlock>
            <TextBlock FontSize="20" VerticalAlignment="Center" Margin="5" Text="{Binding Temperature, FallbackValue='0'}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
